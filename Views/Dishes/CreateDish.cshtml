
@model Dish


<h3 class="text-center">Add a new Dish!</h3>
<div class="mb-3">
    <a asp-controller="Home" asp-action="Index">Home</a>
</div>
<form asp-controller="Dishes" asp-action="Create" method="POST">
    <div class="mb-3">
        <span class="form-label text-danger font-weight-bold" asp-validation-for="Name"></span>
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name">   
    </div>
    <div class="mb-3">
        <span class="form-label text-danger font-weight-bold" asp-validation-for="Calories"></span>
        <label class="form-label" asp-for="Calories"></label>
        <input class="form-control" asp-for="Calories">   
    </div>

    <div class="mb-3">
        <span class="form-label text-danger font-weight-bold" asp-validation-for="Tastiness"></span>
        <label class="form-label" asp-for="Tastiness"></label>
        <select asp-for="Tastiness" class="form-select form-control" aria-label="Default select example">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>  
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="ChefId"></label>
        <select asp-for="ChefId" class="form-select form-control" aria-label="Default select example">
            @if(ViewBag.AllChefs != null)
            {
                foreach (var chef in ViewBag.AllChefs)
                {
                    <option value="@chef.ChefId">@chef.FullName()</option>
                }
            }
           
        </select>   
    </div>

    <div class="mb-3">
        <span class="form-label text-danger font-weight-bold" asp-validation-for="Description"></span>
        <label class="form-label" asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" ></textarea>
    </div>
     <button class="btn btn-outline-success">Add Dish</button>
</form>